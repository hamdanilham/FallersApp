<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fallersapp.fallersapp.SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/app_bar_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="70dp"
            android:paddingRight="70dp">

            <ImageView
                android:layout_marginTop="80dp"
                android:id="@+id/image_logo_login"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/title"
                android:layout_centerHorizontal="true"/>
            <EditText
                android:id="@+id/et_email_signup"
                android:layout_below="@+id/image_logo_login"
                android:layout_width="match_parent"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textSize="18sp"
                android:drawableLeft="@drawable/email_signup"
                android:layout_marginTop="20dp"
                android:drawablePadding="15dp"
                android:inputType="textEmailAddress" />
            <EditText
                android:id="@+id/et_username_signup"
                android:textColor="@color/colorAccent"
                android:layout_below="@+id/et_email_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:drawableLeft="@drawable/login_email_icon"
                android:typeface="serif"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:drawablePadding="15dp"
                android:inputType="textPassword" />
            <EditText
                android:id="@+id/et_password_signup"
                android:textColor="@color/colorAccent"
                android:layout_below="@+id/et_username_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:drawableLeft="@drawable/login_icon_password"
                android:typeface="serif"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:drawablePadding="15dp"
                android:inputType="textPassword" />
            <EditText
                android:id="@+id/et_repassword_signup"
                android:textColor="@color/colorAccent"
                android:layout_below="@+id/et_password_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:drawableLeft="@drawable/login_icon_password"
                android:typeface="serif"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:drawablePadding="15dp"
                android:inputType="textPassword" />
            <Button
                android:id="@+id/btn_signup_btn"
                android:layout_below="@+id/et_repassword_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="15dp"
                android:textColor="@color/colorBackground"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginTop="20dp"
                android:text="Register"/>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>
